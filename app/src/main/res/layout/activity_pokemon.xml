<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonActivity">

    <ImageView
        android:id="@+id/ivPokemon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/pokemon_picture"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivTipo1"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:contentDescription="@string/pokemon_picture"
        app:layout_constraintBottom_toBottomOf="@+id/ivPokemon"
        app:layout_constraintStart_toEndOf="@+id/ivPokemon"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivTipo2"
        android:layout_width="100dp"
        android:layout_height="30dp"

        app:layout_constraintStart_toEndOf="@+id/ivPokemon"
        app:layout_constraintTop_toBottomOf="@+id/ivTipo1"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPokemonNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPokemon"
        tools:text="Nombre pokemon" />

    <TextView
        android:id="@+id/tvPokemonAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPokemonNombre"
        tools:text="Altura pokemon" />

    <TextView
        android:id="@+id/tvPokemonPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPokemonAltura"
        tools:text="Peso pokemon" />

    <ProgressBar
        android:id="@+id/vida"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/ivTipo1"
        app:layout_constraintStart_toEndOf="@+id/ivPokemon" />





</androidx.constraintlayout.widget.ConstraintLayout>